# Production Environment Variables (for Vercel deployment)
# These should be set in your Vercel dashboard under Settings > Environment Variables

# AI Provider API Keys (set these in Vercel dashboard)
OPENAI_API_KEY=your_openai_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
VOLCENGINE_API_KEY=your_volcengine_api_key_here

# Development Environment Variables (for local development only)
# These are only used when VITE_DIRECT_API_MODE=true

# Set to 'true' to use direct API calls (development only)
VITE_DIRECT_API_MODE=false

# Only needed for development mode
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_DEEPSEEK_API_KEY=your_deepseek_api_key_here
VITE_VOLCENGINE_API_KEY=your_volcengine_api_key_here

# Serverless API URL (optional, defaults to /api/chat)
# VITE_SERVERLESS_API_URL=https://your-app.vercel.app/api/chat 